	pages = {653--665},
	file = {Cunningham et al. - 2017 - Real-Time Ultrasound Segmentation, Analysis and Vi.pdf:/Users/alina/Zotero/storage/T4H93H56/Cunningham et al. - 2017 - Real-Time Ultrasound Segmentation, Analysis and Vi.pdf:application/pdf},
