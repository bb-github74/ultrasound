	note = {Place: United States},
	keywords = {Humans, Computer Simulation, Adult, Male, Isometric Contraction/*physiology, Stress, Mechanical, Electromyography/*methods, *Models, Biological, Neck Muscles/innervation/*physiology, Reflex/*physiology, Volition/*physiology},
	pages = {66--77},
}

@article{falla_neck_2004,
	title = {Neck flexor muscle fatigue is side specific in patients with unilateral neck pain.},
	volume = {8},
